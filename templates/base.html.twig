<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}


        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
    <div class="container">
        <nav class="navbar row navbar-expand-lg navbar-light bg-light">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item {% if app.request.get('cityId') == 1 %} active {% endif %}">
                        <a class="nav-link" href="{{ url('district_index', {'cityId': '1'}) }}">Gdańsk</a>
                    </li>
                    <li class="nav-item {% if app.request.get('cityId') == 2 %} active {% endif %}">
                        <a class="nav-link" href="{{ url('district_index', {'cityId': '2'}) }}">Kraków</a>
                    </li>
                </ul>
            </div>

            {% block button_refresh %}{% endblock %}
        </nav>
        {% block body %}{% endblock %}
    </div>
    </body>
</html>
